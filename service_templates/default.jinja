#!/bin/sh

. /etc/rc.subr

name="{{ NAME }}"
{{ NAME }}_chdir="/opt/opnware/pkgs/{{ NAME }}"
rcvar="{{ NAME }}_enable"
{{ NAME }}_command="{{ COMMAND }}"
pidfile="/opt/opnware/pkgs/{{ NAME }}/{{ '${name}' }}.pid"
logfile="/opt/opnware/pkgs/{{ NAME }}/{{ '${name}' }}.log"
command="/usr/sbin/daemon"
command_args="-u {{ NAME }} -t {{ '${name}_d' }} -P {{ '${pidfile}' }} -o {{ '${logfile}' }} -r -R 3 {{ '${' + NAME + '_command' + '}' }}"
{{ SRV_CMDS }}
load_rc_config {{ '${name}' }}
: {{ '${' + NAME + '_enable' + ':=no' }} }

run_rc_command "$1"
